<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:color">@color/question_color</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>

    <style name="AnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/radio_button_text_size</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginTop">@dimen/padding_top</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">@dimen/padding_bottom</item>
        <item name="android:layout_weight">1</item>
    </style>

